<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                android:layout_width="250dp"
                android:layout_height="wrap_content">

    <LinearLayout
        android:id="@+id/main_layout"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <TextView
            android:id="@+id/appwidget_title"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="3dp"
            android:background="@color/background"
            android:contentDescription="@string/appwidget_text"
            android:gravity="center"
            android:padding="@dimen/widget_margin"
            android:text="@string/appwidget_title"
            android:textColor="#ffffff"
            android:textSize="16sp"
            android:textStyle="bold"/>

        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@color/background"
            android:paddingBottom="5dp"
            android:paddingEnd="@dimen/widget_margin"
            android:paddingStart="@dimen/widget_margin"
            android:paddingTop="5dp">

            <TextView
                android:id="@+id/appwidget_text1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentStart="true"
                android:layout_toStartOf="@id/appwidget_price1"
                android:contentDescription="@string/appwidget_text"
                android:ellipsize="end"
                android:maxLines="1"
                android:textColor="#ffffff"
                android:textSize="14sp"/>

            <TextView
                android:id="@+id/appwidget_price1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignBaseline="@+id/appwidget_text1"
                android:layout_marginStart="2dp"
                android:layout_toStartOf="@+id/appwidget_text_1"
                android:contentDescription="@string/appwidget_text"
                android:textColor="#ffffff"
                android:textSize="14sp"/>

            <TextView
                android:id="@+id/appwidget_text_1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignBaseline="@id/appwidget_price1"
                android:layout_alignParentEnd="true"
                android:layout_marginStart="5dp"
                android:contentDescription="@string/appwidget_text"
                android:textColor="#ffffff"
                android:textSize="14sp"/>

        </RelativeLayout>


        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="0.5dp"
            android:background="@color/white"/>

        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@color/background"
            android:paddingBottom="5dp"
            android:paddingEnd="@dimen/widget_margin"
            android:paddingStart="@dimen/widget_margin"
            android:paddingTop="5dp">

            <TextView
                android:id="@+id/appwidget_text2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentStart="true"
                android:layout_toStartOf="@id/appwidget_price2"
                android:contentDescription="@string/appwidget_text"
                android:ellipsize="end"
                android:maxLines="1"
                android:textColor="#ffffff"
                android:textSize="14sp"/>

            <TextView
                android:id="@+id/appwidget_price2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignBaseline="@id/appwidget_text2"
                android:layout_marginStart="2dp"
                android:layout_toStartOf="@+id/appwidget_text_2"
                android:contentDescription="@string/appwidget_text"
                android:textColor="#ffffff"
                android:textSize="14sp"/>

            <TextView
                android:id="@+id/appwidget_text_2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignBaseline="@+id/appwidget_price2"
                android:layout_alignParentEnd="true"
                android:layout_marginStart="5dp"
                android:contentDescription="@string/appwidget_text"
                android:textColor="#ffffff"
                android:textSize="14sp"/>

        </RelativeLayout>


        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="0.5dp"
            android:background="@color/white"/>


        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@color/background"
            android:paddingBottom="5dp"
            android:paddingEnd="@dimen/widget_margin"
            android:paddingStart="@dimen/widget_margin"
            android:paddingTop="5dp">

            <TextView
                android:id="@+id/appwidget_text3"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentStart="true"
                android:layout_toStartOf="@id/appwidget_price3"
                android:contentDescription="@string/appwidget_text"
                android:ellipsize="end"
                android:maxLines="1"
                android:textColor="#ffffff"
                android:textSize="14sp"/>

            <TextView
                android:id="@+id/appwidget_price3"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignBaseline="@id/appwidget_text3"
                android:layout_marginStart="2dp"
                android:layout_toStartOf="@+id/appwidget_text_3"
                android:contentDescription="@string/appwidget_text"
                android:textColor="#ffffff"
                android:textSize="14sp"/>

            <TextView
                android:id="@+id/appwidget_text_3"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignBaseline="@id/appwidget_price3"
                android:layout_alignParentEnd="true"
                android:layout_marginStart="5dp"
                android:contentDescription="@string/appwidget_text"
                android:textColor="#ffffff"
                android:textSize="14sp"/>


        </RelativeLayout>


        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="0.5dp"
            android:background="@color/white"/>

        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@color/background"
            android:paddingBottom="5dp"
            android:paddingEnd="@dimen/widget_margin"
            android:paddingStart="@dimen/widget_margin"
            android:paddingTop="5dp">

            <TextView
                android:id="@+id/appwidget_text4"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentStart="true"
                android:layout_toStartOf="@id/appwidget_price4"
                android:contentDescription="@string/appwidget_text"
                android:ellipsize="end"
                android:maxLines="1"
                android:textColor="#ffffff"
                android:textSize="14sp"/>

            <TextView
                android:id="@+id/appwidget_price4"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignBaseline="@+id/appwidget_text4"
                android:layout_marginStart="2dp"
                android:layout_toStartOf="@+id/appwidget_text_4"
                android:contentDescription="@string/appwidget_text"
                android:textColor="#ffffff"
                android:textSize="14sp"/>

            <TextView
                android:id="@+id/appwidget_text_4"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignBaseline="@+id/appwidget_price4"
                android:layout_alignParentEnd="true"
                android:layout_marginStart="5dp"
                android:contentDescription="@string/appwidget_text"
                android:textColor="#ffffff"
                android:textSize="14sp"/>


        </RelativeLayout>


    </LinearLayout>

    <Button
        android:id="@+id/btn"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_alignBottom="@+id/main_layout"
        android:background="@android:color/transparent"
        android:clickable="true"
        android:focusable="true"
        android:textColor="@color/red"
        android:textSize="20sp"/>

</RelativeLayout>